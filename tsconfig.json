{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext", // ES2022 ?
    "module": "esnext", // ES2022 ?
    "moduleResolution": "node",
    "jsx": "react", // Legacy
    // Add default import for modules
    // @see https://www.typescriptlang.org/tsconfig#esModuleInterop
    "esModuleInterop": true,
    // Load JSON modules
    // @see https://www.typescriptlang.org/tsconfig#resolveJsonModule
    "resolveJsonModule": true, // Legacy
    // "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "outDir": "./www/built/angular/",
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "sourceMap": true,
    // "declaration": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "include": ["legacy"], // Legacy
  "exclude": ["node_modules"] // Legacy
}
