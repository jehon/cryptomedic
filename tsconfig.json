/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    // Add default import for modules
    // @see https://www.typescriptlang.org/tsconfig#esModuleInterop
    "esModuleInterop": true,
    // Load JSON modules
    // @see https://www.typescriptlang.org/tsconfig#resolveJsonModule
    "resolveJsonModule": true, // Legacy
    // "sourceMap": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": false,
    "lib": ["ES2023", "dom", "DOM.Iterable"],

    // For Nodejs Typescript support
    // "noEmit": true,
    // "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true
    // "erasableSyntaxOnly": true # TODO: Typescript 5.8
  },
  "include": ["src", "legacy", "tests"]
}
