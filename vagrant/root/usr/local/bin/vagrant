#!/bin/bash

if [ "$1" = "" ] || [ "$1" = "help" ]; then
cat <<-HELP
  This is a place holder to ease the running of script both inside and outside of the vagrant.

  It support the following options:
  - port --guest $port
    return $port

HELP
  exit 0
fi

case "$1" in
  "port")
    case "$2" in
      "--guest")
        echo "$3"
        exit 0
    esac
    ;;
esac

echo "Command not understood"
