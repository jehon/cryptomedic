{
  "name": "CryptomedicApp",
  "private": true,
  "version": "5.1.3",
  "description": "Cryptomedic application for all plateforms",
  "repository": "https://github.com/jehon/CryptomedicApp",
  "license": "MIT",
  "dependencies": {
    "@webcomponents/shadydom": "^1.0.8",
    "angular": "^1.4.14",
    "angular-mocks": "1.4.x",
    "angular-route": "1.4.x",
    "clone": "^2.1.1",
    "excellentexport": "^2.1.0",
    "webcomponentsjs": "latest"
  },
  "devDependencies": {
    "bower": "1.*",
    "chromedriver": "latest",
    "eslint": "3.*",
    "fs-extra": "latest",
    "geckodriver": "latest",
    "glob": "latest",
    "jasmine-core": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-coverage": "latest",
    "karma-firefox-launcher": "latest",
    "karma-html-reporter": "latest",
    "karma-jasmine": "latest",
    "karma-junit-reporter": "latest",
    "kill-by-port": "0.0.1",
    "nightwatch": "latest",
    "nightwatch-html-reporter": "latest",
    "offline-plugin": "latest",
    "recursive-readdir-sync": "latest",
    "selenium-server": "latest",
    "svgo": "latest",
    "sw-precache": "^4.0.0",
    "webpack": "^3.8.1"
  },
  "scripts": {
    "postinstall": "bower install && cd www/api/v1.3/ && composer.phar install && cd - && npm build",
    "reset": "./bin/dev-reset.sh",
    "build": "webpack",
    "test": "npm run reset && npm run build && npm run test-api && npm run test-unit && npm run test-e2e",
    "test-api": "docker-compose exec server /app/bin/dev-phpunit.sh",
    "test-unit": "karma start --single-run",
    "test-unit-continuously": "karma start",
    "test-e2e": "nightwatch",
    "test-e2e-chrome": "nightwatch -e chrome",
    "start": "node bin/server.js"
  }
}
