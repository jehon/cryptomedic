{
  "root": true,
  "extends": ["eslint:recommended"],
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": [
      "error",
      {
        "allow": ["warn", "error", "info", "assert"]
      }
    ],
    "no-warning-comments": "off",
    "quote-props": ["warn", "as-needed"]
  }
}
