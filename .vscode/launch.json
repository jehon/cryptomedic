  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch node unit test",
      "type": "node",
      "request": "launch",

      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--import",
        "tsx/esm",
        "--test"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Listen for PHP server",
      "type": "php",
      "request": "launch"
    }
  ]
}
