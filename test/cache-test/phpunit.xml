<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
	backupGlobals="false" 
	backupStaticAttributes="false"
	colors="true"
	convertErrorsToExceptions="true" 
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true" 
	processIsolation="false"
	stopOnFailure="false" 
	syntaxCheck="false"
	verbose="true"
	>
<!-- 
	bootstrap="bootstrap/autoload.php"
	checkForUnintentionallyCoveredCode="false"
	beStrictAboutTestsThatDoNotTestAnything="false"
	beStrictAboutOutputDuringTests="false"
 --> 
	<testsuites>
		<testsuite name="Application Test Suite">
			<directory>.</directory>
		</testsuite>
	</testsuites>
	<filter>
<!-- 		<blacklist>
			<directory>vendor</directory>
		</blacklist> 
-->
		<whitelist processUncoveredFilesFromWhitelist="false">
			<directory suffix=".php">../../cache_generator/</directory>
		</whitelist>
	</filter>
	<php>
		<env name="APP_ENV" value="testing" />
		<env name="CACHE_DRIVER" value="array" />
		<env name="SESSION_DRIVER" value="array" />
		<env name="QUEUE_DRIVER" value="sync" />
        <server name='HTTP_HOST' value='http://localhost' />
	</php>
	<logging>
		<log type="coverage-clover" target="../../tmp/cache-test/coverage.xml" />
		<log type="coverage-html" target="../../tmp/cache-test/coverage/" />
 		<log type="junit" target="../../tmp/cache-test/phpunit.xml" logIncompleteSkipped="false" />
	</logging>
</phpunit>
