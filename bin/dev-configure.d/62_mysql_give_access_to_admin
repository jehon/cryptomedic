#!/bin/bash

set -e

DBROOTUSER=`php $PRJ_DIR/config.php 'database.rootuser'`
DBROOTPASS=`php $PRJ_DIR/config.php 'database.rootpwd'`

mysql --user=root <<EOSQL
  GRANT ALL PRIVILEGES ON *.* TO '$DBROOTUSER' IDENTIFIED BY '$DBROOTPASS' WITH GRANT OPTION;
EOSQL

# Allow access to root also
mysql --user=root <<EOSQL
  SET PASSWORD FOR root@localhost=PASSWORD('');
EOSQL
