#!/usr/bin/env bash

set -o errexit

# shellcheck source=./cr-lib
. "$(dirname "${BASH_SOURCE[0]}")"/cr-lib

mkdir -p ~/.ssh/
if grep CR_DEPLOY_HOST "$SSH_KNOWN_HOSTS" >/dev/null; then
    echo "Removing old key";
    sed -i "/$(DEPLOY_HOST).*/d" "$SSH_KNOWN_HOSTS" ;
fi
echo "Installing the key"
cat conf/ovh.key >> "$SSH_KNOWN_HOSTS"
