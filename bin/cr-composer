#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source-path=SCRIPTDIR
. "$(realpath "$(dirname "${BASH_SOURCE[0]}")")"/cr-lib

FOLDER="$(realpath --relative-to="$CR_PRJ_DIR" "$(pwd)")"

docker compose run "${CR_DOCKER_ARGS_RUN[@]}" \
	--workdir "/app/$FOLDER" \
	web /composer.phar \
	--no-interaction \
	"$@"
