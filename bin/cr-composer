#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source=./cr-lib
. "$(dirname "${BASH_SOURCE[0]}")"/cr-lib

# shellcheck disable=SC2119
FOLDER="$(absoluteToDockerRelative)"

cr-docker-compose run --workdir "/app/$FOLDER" \
    "php" \
    "/composer.phar" "$@"

cr-fix-permissions "$FOLDER/vendor"
