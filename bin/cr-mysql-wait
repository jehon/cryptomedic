#!/usr/bin/env bash

set -o errexit
set -o pipefail

. "$(realpath "$(dirname "${BASH_SOURCE[0]}")")"/cr-lib

mysql_test() {
    # Do not capture stdin!
    bin/cr-mysqladmin ping -h "localhost" --silent >/dev/null </dev/null
}

progress "Waiting for mysql"
while ! mysql_test; do
    progress
    sleep 0.5s
done
progress " âœ“\n"
