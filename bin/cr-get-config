#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source=./cr-lib
. "$(dirname "${BASH_SOURCE[0]}")"/cr-lib

if [ -z "$1" ]; then
    echo "Please specify the key you want to get, as json-path notation" >&2
    exit 1
fi

cr-docker-compose run --rm \
    "php" \
    "php" "/app/config.php" "$1"
