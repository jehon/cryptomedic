#!/usr/bin/php

<?php
  //

  $myargs = $argv;
  $argv = [];
  $argc = 0;

  require_once(__DIR__ . "/../vendor/autoload.php");
  require_once(__DIR__ . "/../config.php");

  global $myconfig;

  $db = new \Jehon\Maintenance\Database(
      "mysql:dbname={$myconfig['database']['schema']};host={$myconfig['database']['host']}",
      'root',
      $myconfig['database']['rootpwd']
    );

  if (count($myargs) > 1) {
    var_dump($myargs);
    $db->runOne($myargs[1]);
  } else {
    $db->runOne(__DIR__ . "/../conf/database/versions/");
    $db->runOne(__DIR__ . "/../conf/database/always/");
  }
