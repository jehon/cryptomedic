#!/usr/bin/env bash

set -o errexit
set -o pipefail

. "$(realpath "$(dirname "${BASH_SOURCE[0]}")")"/cr-lib

# docker compose run "${CR_DOCKER_ARGS_RUN[@]}" \
#     --volume "$(pwd):/workdir" \
#     --workdir /workdir \
#     node \
#     npm "$@"

if type npm >& /dev/null ; then
    npm "$@"
else 
    docker compose run "${CR_DOCKER_ARGS_RUN[@]}" \
        node \
        npm "$@"
fi
