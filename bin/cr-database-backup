#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source=./cr-lib
. "$(dirname "${BASH_SOURCE[0]}")"/cr-lib

OUTPUT="$CR_TMP/cryptomedic-$(date +%F-%H-%M-%S.%N)"

mkdir -p "$(dirname "$OUTPUT")"

mysqldump --user=root --password=root cryptomedic >"$OUTPUT"

echo
echo "Backup available at $OUTPUT"
