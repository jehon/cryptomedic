#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source=./cr-lib
. "$(dirname "${BASH_SOURCE[0]}")"/cr-lib

# https://docs.docker.com/compose/env-file/
#
# Bug about newline: see https://issueexplorer.com/issue/docker/compose/8833
#

# Thanks to https://stackoverflow.com/a/2456870/1954789
# Thanks to https://superuser.com/a/813477/287025
if [ -t 0 ]; then
    # Close the input
    exec <&-
fi

docker compose --project-directory="$CR_PRJ_DIR" "$@"
