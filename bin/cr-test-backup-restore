#!/usr/bin/bash

set -o errexit

clear

rm -f tmp/backup/backups/*.sql

make reset
wget "http://${CRYPTOMEDIC_DEPLOY_HTTP_HOST}:${CRYPTOMEDIC_DEPLOY_HTTP_PORT}/maintenance/create_db_backup.php?pwd=${CRYPTOMEDIC_DEPLOY_HTTP_TOKEN}"

rsync -a live/ live-from-production/

make acceptance

echo "Ok, all done"
